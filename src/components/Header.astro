---
// Add this frontmatter section to properly access Astro.url
import Logo from './Logo.astro';

const pathname = Astro.url.pathname;
---

<nav class="bg-white dark:bg-gray-900 fixed w-full z-20 top-0 start-0 border-b border-gray-200 dark:border-gray-600 p-4">
  <div class="flex items-center justify-between w-full">
    <!-- Logo -->
    <div class="flex-shrink-0">
      <Logo size="md" />
    </div>

    <!-- Navegación centrada -->
    <div class="flex-grow flex items-center justify-center">
      <ul class="flex flex-row space-x-8 font-medium bg-white dark:bg-gray-900">
        <li>
          <a href="/" class={`py-2 px-3 ${pathname === "/" ? "text-blue-700 font-bold hover:underline dark:text-blue-500" : "text-gray-900 hover:text-blue-700 dark:text-white dark:hover:text-blue-500"}`}>Inicio</a>
        </li>
        <li>
          <a href="/About" class={`py-2 px-3 ${pathname === "/About" ? "text-blue-700 font-bold hover:underline dark:text-blue-500" : "text-gray-900 hover:text-blue-700 dark:text-white dark:hover:text-blue-500"}`}>Nosotros</a>
        </li>
        <li>
          <a href="/Services" class={`py-2 px-3 ${pathname === "/Services" ? "text-blue-700 font-bold hover:underline dark:text-blue-500" : "text-gray-900 hover:text-blue-700 dark:text-white dark:hover:text-blue-500"}`}>Productos y Servicios</a>
        </li>
        <li>
          <a href="/Forms" class={`py-2 px-3 ${pathname === "/Forms" ? "text-blue-700 font-bold hover:underline dark:text-blue-500" : "text-gray-900 hover:text-blue-700 dark:text-white dark:hover:text-blue-500"}`}>Contacto</a>
        </li>
      </ul>
    </div>

    <!-- Botón de contacto -->
    <div class="flex-shrink-0">
      <a href="/Forms" class="text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-4 py-2 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800">
        Contáctanos
      </a>
    </div>
  </div>
</nav>
