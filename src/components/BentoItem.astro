---
interface Props {
  title?: string;
  class?: string;
}

const { title, class: className } = Astro.props;
---

<article class={`bg-white/90 backdrop-blur-sm rounded-lg shadow-md p-6 dark:bg-gray-800/90 ${className}`}>
  {title && <h3 class="text-xl font-bold mb-4 text-blue-700 dark:text-blue-500">{title}</h3>}
  <div class="text-gray-700 dark:text-gray-300">
    <slot />
  </div>
</article>